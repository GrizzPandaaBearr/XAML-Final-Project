<Page xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:XAML_Final_Project"
      xmlns:Component="clr-namespace:XAML_Final_Project.Component" x:Class="XAML_Final_Project.AppMenu"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AppMenu">

    <Grid>
        <Border Height="40"
                Width="640"
                Background="SkyBlue"
                BorderBrush="SkyBlue"
                BorderThickness="3"
                VerticalAlignment="Top"
                HorizontalAlignment="Center"
                Margin="0,75,0,0"
                CornerRadius="5"/>
        
        <Menu Height="30"
              Width="630"
              Background="SkyBlue"
              VerticalAlignment="Top"
              HorizontalAlignment="Center"
              Margin="0,80,0,0">
            <MenuItem Header="Home"
                      Height="30"
                      Width="90"
                      HorizontalAlignment="Center" 
                      FontSize="18" 
                      FontFamily="Cambria">
                <MenuItem.Icon>
                    <Image Source="/Assets/Home.png" />
                </MenuItem.Icon>

                <MenuItem Header="Sign Up" 
                          Background="SkyBlue"
                          FontSize="18"
                          FontFamily="Cambria">
                    <MenuItem.Icon>
                        <Image Source="/Assets/People.png"/>
                    </MenuItem.Icon>
                </MenuItem>

                <MenuItem Header="Log In" 
                          Background="SkyBlue"
                          FontSize="18"
                          FontFamily="Cambria">
                    <MenuItem.Icon>
                        <Image Source="/Assets/People.png"/>
                    </MenuItem.Icon>

                    <MenuItem Header="Member" 
                              Background="SkyBlue"
                              FontSize="18"
                              FontFamily="Cambria">
                        <MenuItem.Icon>
                            <Image Source="/Assets/People.png"/>
                        </MenuItem.Icon>
                    </MenuItem>

                    <MenuItem Header="Admin" 
                              Background="SkyBlue"
                              FontSize="18"
                              FontFamily="Cambria">
                        <MenuItem.Icon>
                            <Image Source="/Assets/Peoples.png"/>
                        </MenuItem.Icon>
                    </MenuItem>
                </MenuItem>
            </MenuItem>

            <MenuItem Header="Books"
                      Height="30"
                      Width="90"
                      HorizontalAlignment="Center" 
                      FontSize="18" 
                      FontFamily="Cambria">
                <MenuItem.Icon>
                    <Image Source="/Assets/Books.png" />
                </MenuItem.Icon>
                <MenuItem>
                    <MenuItem Header="Availability" 
                              Background="SkyBlue"
                              FontSize="18"
                              FontFamily="Cambria">
                        <MenuItem.Icon>
                            <Image Source="/Assets/Availability.png"/>
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem Header="Prebook" 
                              Background="SkyBlue"
                              FontSize="18"
                              FontFamily="Cambria">
                        <MenuItem.Icon>
                            <Image Source="/Assets/Pre-Order.png"/>
                        </MenuItem.Icon>
                    </MenuItem>
                </MenuItem>
            </MenuItem>
        </Menu>
    </Grid>
</Page>
